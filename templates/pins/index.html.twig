{% extends 'base.html.twig' %}

{% block title %}Waters!{% endblock %}

{% block body %}
<div class="main">
    <h1>Water Promo</h1>

    <div class="produit">
        <h1>{{ "Last products" | trans }}</h1>
        <div class="row">
            {% if pins is empty %}
                <div>
                    Aucun produit trouv√©.
                </div>
            {% else %}
                <ul class="list-prod">
                    {% for produit in pins|slice(0, 6) %}
                        <div class="card">
                            <img src="{{ produit.getImageUrl }}"/>
                            <div>
                                <div><strong>Nom du Produit:</strong> {{ produit.getNomProduit }}</div>
                                <div><strong>Description:</strong> {{ produit.getDescription }}</div>
                                <div><strong>Volume:</strong> {{ produit.getTypeVolume.volume }} L</div>
                            </div>
                        </div>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>

</div>
{% endblock %}
